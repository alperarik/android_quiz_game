<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alper_arik.quiz.RegisterActivity"
    android:background="#060075">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTER"
        android:id="@+id/registerTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textColor="#FF5B33" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameEditText"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/registerTextView"
        android:layout_alignLeft="@+id/registerTextView"
        android:layout_alignStart="@+id/registerTextView"
        android:textColor="#FF5B33" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:ems="10"
        android:id="@+id/surnameEditText"
        android:layout_below="@+id/nameEditText"
        android:layout_alignLeft="@+id/registerTextView"
        android:textColor="#FF5B33" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday "
        android:ems="10"
        android:id="@+id/birthdayEditText"
        android:layout_below="@+id/surnameEditText"
        android:layout_alignLeft="@+id/registerTextView"
        android:textColor="#FF5B33" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userName"
        android:ems="10"
        android:id="@+id/registerUsernameEditText"
        android:layout_below="@+id/birthdayEditText"
        android:layout_alignLeft="@+id/registerTextView"
        android:layout_marginTop="50dp"
        android:textColor="#FF5B33" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="Password"
        android:ems="10"
        android:id="@+id/registerPasswordEditText"
        android:layout_below="@+id/registerUsernameEditText"
        android:layout_alignLeft="@+id/registerTextView"
        android:textColor="#FF5B33" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/registerPasswordEditText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"/>

</RelativeLayout>
